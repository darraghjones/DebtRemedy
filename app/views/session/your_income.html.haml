%h2 Income
- form_for(@client, :url => {:action => :your_income}) do |f|
  %table
    %tr
      %th &nbsp;
      %th &nbsp;
      %th Amount
      %th How often
    %tr
      %td= info_icon('')
      %td Your take home pay
      %td= f.currency_field :take_home_pay
      %td= f.frequency_select :take_home_pay
    %tr
      %td= info_icon('')
      %td Your partner's take home pay
      %td= f.currency_field :partner_take_home_pay
      %td= f.frequency_select :partner_take_home_pay
    %tr
      %td
      %td Rent/board received
      %td= f.currency_field :rent_received
      %td= f.frequency_select :rent_received
    %tr
      %td
      %td Pension received
      %td= f.currency_field :pension_received
      %td= f.frequency_select :pension_received
    %tr
      %td
      %td Income Support
      %td= f.currency_field :income_support
      %td= f.frequency_select :income_support
    %tr
      %td
      %td Jobseekers Allowance
      %td= f.currency_field :jobseekers_allowance
      %td= f.frequency_select :jobseekers_allowance
    %tr
      %td= info_icon('')
      %td Incapacity Benefit/ESA
      %td= f.currency_field :incapacity_benefit
      %td= f.frequency_select :incapacity_benefit
    %tr
      %td
      %td Disability Living Allowance
      %td= f.currency_field :disability_living_allowance
      %td= f.frequency_select :disability_living_allowance
    %tr
      %td
      %td Working Tax Credit
      %td= f.currency_field :working_tax_credit
      %td= f.frequency_select :working_tax_credit
    %tr
      %td= info_icon('')
      %td Any other income received
      %td= f.currency_field :any_other_income
      %td= f.frequency_select :any_other_income
  = submit_tag "Back", :class => "button negative"
  = submit_tag "Save & exit", :class => "button"
  = submit_tag "Next", :class => "button positive"
